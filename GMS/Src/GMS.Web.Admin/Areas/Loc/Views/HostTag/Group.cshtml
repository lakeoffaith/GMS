<div class="page-bar">
				<ul class="page-breadcrumb">
					<li>
						<i class="fa fa-home"></i>
						<a href="index.html">首页</a>
						<i class="fa fa-angle-right"></i>
					</li>
					<li>
						<a href="#">人员管理</a>
						<i class="fa fa-angle-right"></i>
					</li>
					<li>
						<a href="#">所有人员</a>
					</li>
				</ul>
			</div>
						<div class="row">
                               @using (Html.BeginForm(null, null, null, FormMethod.Get, new {  }))
                                {
                                   <div class="col-md-12">
								<!-- BEGIN SAMPLE TABLE PORTLET-->
								<div class="portlet box green">
									<div class="portlet-title">
										<div class="caption">
											<i class="fa fa-filter"></i>查询内容
										</div>
										<div class="tools">
											<button class="btn btn-primary btn-sm btn-oval active" type="submit">
												<i class="fa fa-search"></i>
											查询</button>
											<a href="javascript:;" class="collapse">
											</a>
										</div>
									</div>
									<div class="portlet-body">
										<form action="" class="form-horizontal" role="form">
											<div class="row">
												<div class="col-md-3">
													<div class="form-group">
														<label for="inputName" class="col-md-4 control-label">
															名称：
														</label>
														<div class="col-md-8">
															 @Html.TextBox("HostName", null, new { @class = "form-control" })
														</div>
													</div>
												</div>
												<div class="col-md-3">
													<div class="form-group">
														<label for="inputName" class="col-md-4 control-label">
															编号：
														</label>
														<div class="col-md-8">
															@Html.TextBox("HostExternalId", null, new { @class = "form-control" })
														</div>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-md-6">
													<div class="form-group">
														<label class="col-md-2 control-label">标签：</label>		
														<div class="radio-list col-md-9">
															<label class="radio-inline">
															<input type="radio" name="tagBindingSelectedValue"  value="2" >不限 </label>
															<label class="radio-inline">
															<input type="radio" name="tagBindingSelectedValue" value="1" checked> 已领用 </label>
															<label class="radio-inline">
															<input type="radio" name="tagBindingSelectedValue"  value="0"> 未领用 </label>
														</div>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label class="col-md-2 control-label">在线</label>		
														<div class="radio-list col-md-9">
															<label class="radio-inline">
															<input type="radio" name="tagOnlineSelectedValue"  value="2" > 不限</label>
															<label class="radio-inline">
															<input type="radio" name="tagOnlineSelectedValue"  value="1" checked> 在线 </label>
															<label class="radio-inline">
															<input type="radio" name="tagOnlineSelectedValue"  value="0"> 不在线 </label>
														</div>
													</div>
												</div>
											</div>
										</form>
									</div>
								</div>
								<!-- END SAMPLE TABLE PORTLET-->
							</div>
                               }
			            </div>
			            <div class="row">
							<div class="col-md-12">
								<!-- BEGIN SAMPLE TABLE PORTLET-->
								<div class="portlet box green">
									<div class="portlet-title">
										<div class="caption">
											<i class="fa fa-cogs"></i>数据列表
										</div>
										<div class="actions">
										<a href="javascript:;" class="btn btn-default btn-sm">
										<i class="fa fa-plus"></i> Add </a>
										</div>
									</div>
									<div class="portlet-body">

										<table class="table table-striped table-bordered table-hover" id="sample_1">
											<thead>
												<tr>
													
													<th>分组名称</th>
													<th>对象数量</th>
													<th>描述</th>
													<th>操作</th>
												</tr>
											</thead>
											<tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @item.GroupName
                                                        </td>
                                                        <td>
                                                            @item.TagCount
                                                        </td>
                                                        <td>
                                                            @item.GroupDescription
                                                        </td>
                                                        <td>
                                                            操作
                                                        </td>
                                                        
                                                    </tr>
                                                }
												
											</tbody>

										</table>
                                           <div class="text-center">
                                                @Html.Pager(Model).Options(o => o.SetPageIndexParameterName("PageIndex").SetCssClass("pagination").SetContainerTagName("ul")
                                               .SetPagerItemTemplate("<li>{0}</li>")
                                               .SetCurrentPagerItemTemplate("<li class=\"active\"><a href=\"#\">{0}</a></li>")
                                               .SetDisabledPagerItemTemplate("<li class=\"disabled\"><a>{0}</a></li>")
                                               .AddHtmlAttribute("style", "float:right"))
                                            </div> 
                                    </div>
								</div>
								<!-- END SAMPLE TABLE PORTLET-->
							</div>
			            </div>
